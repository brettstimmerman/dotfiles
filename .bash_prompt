if tput setaf 1 &> /dev/null; then
    tput sgr0
    if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
        RED=$(tput setaf 9)
        MAGENTA=$(tput setaf 129)
        ORANGE=$(tput setaf 172)
        GREEN=$(tput setaf 10)
        BLUE=$(tput setaf 27)
        CYAN=$(tput setaf 123)
        PURPLE=$(tput setaf 129)
        WHITE=$(tput setaf 255)
    else
        RED=$(tput setaf 1)
        MAGENTA=$(tput setaf 5)
        ORANGE=$(tput setaf 3)
        GREEN=$(tput setaf 2)
        BLUE=$(tput setaf 4)
        CYAN=$(tput setaf 6)
        WHITE=$(tput setaf 15)
    fi
    BOLD=$(tput bold)
    RESET=$(tput sgr0)
else
    RED="\033[1;31m"
    MAGENTA="\033[1;35m"
    ORANGE="\033[1;33m"
    GREEN="\033[1;32m"
    BLUE="\033[1;34m"
    CYAN="\033[1;36m"
    WHITE="\033[1;37m"
    BOLD=""
    RESET="\033[0m"
fi

export RED
export MAGENTA
export ORANGE
export GREEN
export BLUE
export CYAN
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
    [[ $(git status 2> /dev/null | tail -n1) != "nothing to commit (working directory clean)" ]] && echo "*"
}

function parse_git_branch() {
    local COLOR=$PURPLE
    local BRANCH=$(git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* //')

    if [ $BRANCH ]; then
        local DIRTY=$(parse_git_dirty)

        if [ -n "$DIRTY" ]; then
            COLOR=$RED
        fi

        echo -ne "$WHITE on $COLOR$BRANCH$DIRTY"
    fi
}

case $TERM in
    xterm*)
    TITLEBAR='\[\033]0;\w\007\]'
    ;;
    *)
    TITLEBAR=""
    ;;
esac

export PS1="$TITLEBAR\[$GREEN\]\w\$(parse_git_branch)\[$WHITE\] \$ \[$RESET\]"
export PS2="\[$ORANGE\]â†’ \[$RESET\]"
